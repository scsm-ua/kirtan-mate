<link
    rel="stylesheet"
    href="<%= paths.toCss %>/partials/navigation.css"
/>

<a href="<%= paths.toPages.index %>">
    <button class="AppButton Navigation__link">
        <span>Зміст</span>
    </button>
</a>

<a href="<%= paths.toPages.index_list %>">
    <button class="AppButton Navigation__link">
        <span>Індекс</span>
    </button>
</a>

<script>
    (function nav() {
        const p = location.pathname;
        const path = p.endsWith('/')
            ? p.slice(0, -1)
            : p;

        Array.from(
            document.getElementsByClassName('Navigation__link')
        ).forEach((el) => {
            if (el.href.endsWith(path)) {
                el.classList.add('Navigation__link--active');
            }
        });
    })()
</script>
