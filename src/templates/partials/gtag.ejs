<% if (process.env.G_ID) { %>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=<%= process.env.G_ID %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '<%= process.env.G_ID %>', {
    songbook: <% if (locals.songbook_id) { %>'<%= locals.songbook_id %>'<% } else { %>null<% } %>,
    song: <% if (locals.song_id) { %>'<%= locals.song_id %>'<% } else { %>null<% } %>
  });
</script>
<% } %>
