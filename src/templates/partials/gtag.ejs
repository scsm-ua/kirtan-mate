<% if (process.env.G_ID) { %>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=<%= process.env.G_ID %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '<%= process.env.G_ID %>');

  var sonbgook_m = window.location.pathname.match(/^\/([\w-])\//);
  if (sonbgook_m) {
    gtag('event', 'page_view', {
      sonbgook: sonbgook_m[1]
    });
  }
</script>
<% } %>
